<view class="container">
  <scroll-view class="swiper-tab" scroll-x="true">
    <view class="swiper-tab-list {{currentTab==0 ? 'on bor-16' : ''}}" data-current="0" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on bor-16' : ''}}" data-current="1" bindtap="swichNav">已付款</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on bor-16' : ''}}" data-current="2" bindtap="swichNav">待付款</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on bor-16' : ''}}" data-current="3" bindtap="swichNav">已完成</view>
  </scroll-view>
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" bindchange="bindChange" style="height: {{wHeight - 46}}px">

    <swiper-item>
      <scroll-view scroll-y class="m-project">
        <view class="order-tab" wx:if="{{orderList.length != 0}}">
          <view class="order-list" wx:for="{{orderList}}" wx:key="{{index}}">
            <block wx:for="{{item.list}}" wx:key="{{index}}">
              <view class="ord-item">
                <image class="thumbnail" src="{{servsers}}{{item.logo}}"></image>
                <view class="con lineText2">{{item.title}}</view>
                <view class="pro-price">
                  <view class="price">￥{{item.price}}</view>
                  <view class="count">X{{item.number}}</view>
                </view>
              </view>
            </block>
            <view class="ord-item">
              <view class="con">
                <view class="outher-info">
                  <text>实付价格：</text>
                  <text class="ot-intro red ft-w">￥{{item.totalFee}}</text>
                </view>
              </view>
            </view>
            <view class="ord-item" >
              <view class="con tr" wx:if="{{item.state ==0}}">
                <button size="mini" class="cancel-btn">取消订单</button>
                <button size="mini" class="pay-btn">立即支付</button>
              </view>
              
              <view class="con" wx:if="{{item.state ==2}}">
                <view class="outher-info">
                  <text>当前状态：</text>
                  <text class="ot-intro red ft-w">待发货</text>
                </view>
              </view>
              
              <view class="con tr" wx:if="{{item.state == 1}}">
                <button size="mini" class="cancel-btn">申请退款</button>
                <button size="mini" class="pay-btn">确认收货</button>
              </view>
              
              <view class="con" wx:if="{{item.state ==4}}">
                <view class="outher-info">
                  <text>当前状态：</text>
                  <text class="ot-intro red ft-w">已关闭</text>
                </view>
              </view>
            </view>
          </view> 
          </view> 
          <view wx:if="{{orderList.length == 0}}">
          <text >未获取到订单数据</text>
          </view>
       </scroll-view>
    
